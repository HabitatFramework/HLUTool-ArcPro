<UserControl x:Class="HLU.UI.UserControls.DatabaseOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="4">

    <Expander Header="Database Options" IsExpanded="True">
        <Grid Margin="2,4,4,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            <Label Content="Timeout [secs]" HorizontalAlignment="Right" />
            <TextBox Text="{Binding DbConnectionTimeout}" Grid.Column="1"/>
            <Label Content="Incid Table Page Size [rows]" Grid.Column="2" HorizontalAlignment="Right" />
            <TextBox Text="{Binding IncidTablePageSize}" Grid.Column="3"/>
        </Grid>
    </Expander>

    </StackPanel>

</UserControl>
