<controls:ProWindow
    x:Class="HLU.UI.View.WindowQueryAdvanced"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    MinWidth="500"
    MinHeight="490"
    MaxWidth="1000"
    MaxHeight="800"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowQueryAdvanced}"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\NullableValueConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Cursor="{Binding WindowCursor}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox
                Name="GroupBoxQueryAdvanced"
                Height="Auto"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Name="GridOptions" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="4" />
                            <RowDefinition />
                            <RowDefinition Height="4" />
                            <RowDefinition />
                            <RowDefinition Height="4" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid
                            Name="GridDatabase"
                            Grid.Row="2"
                            Margin="2,0,2,2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition Height="4" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition Height="4" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Name="LabelTable"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                Tables
                            </Label>
                            <ComboBox
                                Name="ComboBoxTable"
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="24"
                                Margin="4,0,8,0"
                                BorderThickness="1"
                                DisplayMemberPath="Key"
                                ItemsSource="{Binding Path=Tables, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValue="{Binding Path=Table, ValidatesOnDataErrors=True}"
                                SelectedValuePath="Value" />
                            <Button
                                Name="ButtonAddTable"
                                Grid.Row="3"
                                Grid.Column="0"
                                Width="40"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding Path=AddTableCommand}"
                                Focusable="False"
                                IsDefault="False"
                                Style="{DynamicResource Esri_Button}">
                                Add
                            </Button>

                            <Label
                                Name="LabelColumn"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,4,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                Columns
                            </Label>
                            <ComboBox
                                Name="ComboBoxColumn"
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="24"
                                Margin="4,0,4,0"
                                BorderThickness="1"
                                DisplayMemberPath="Key"
                                IsEnabled="{Binding Path=ColumnIsEnabled}"
                                ItemsSource="{Binding Path=Columns, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValue="{Binding Path=Column, ValidatesOnDataErrors=True}"
                                SelectedValuePath="Value" />
                            <Button
                                Name="ButtonAddColumn"
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="40"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding Path=AddColumnCommand}"
                                Focusable="False"
                                IsDefault="False"
                                Style="{DynamicResource Esri_Button}">
                                Add
                            </Button>

                            <Label
                                Name="LabelComparisonOperator"
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,4,8,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                Operators
                            </Label>
                            <ComboBox
                                Name="ComboBoxComparisonOperator"
                                Grid.Row="5"
                                Grid.Column="0"
                                Height="24"
                                Margin="4,0,8,0"
                                BorderThickness="1"
                                IsReadOnly="{Binding Path=ComparisonOperatorIsEnabled}"
                                ItemsSource="{Binding Path=ComparisonOperators, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValue="{Binding Path=ComparisonOperator, ValidatesOnDataErrors=True}" />
                            <Button
                                Name="ButtonAddOperator"
                                Grid.Row="7"
                                Grid.Column="0"
                                Width="40"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding Path=AddOperatorCommand}"
                                Focusable="False"
                                IsDefault="False"
                                Style="{DynamicResource Esri_Button}">
                                Add
                            </Button>

                            <Label
                                Name="LabelValue"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="0,4,4,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                Values
                            </Label>
                            <ComboBox
                                Name="ComboBoxQueryValue"
                                Grid.Row="5"
                                Grid.Column="1"
                                Height="24"
                                Margin="4,0,4,0"
                                BorderThickness="1"
                                DisplayMemberPath="Key"
                                IsEnabled="{Binding Path=QueryValueIsEnabled}"
                                ItemsSource="{Binding Path=QueryValues}"
                                SelectedValue="{Binding Path=QueryValue, ValidatesOnDataErrors=True}"
                                SelectedValuePath="Value">
                                <!--  ItemContainerStyle="{DynamicResource ComboBoxItemStyle}"  -->
                            </ComboBox>
                            <Button
                                Name="ButtonAddValue"
                                Grid.Row="7"
                                Grid.Column="1"
                                Width="40"
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding Path=AddValueCommand}"
                                Focusable="False"
                                IsDefault="False"
                                Style="{DynamicResource Esri_Button}">
                                Add
                            </Button>
                            <Button
                                Name="ButtonGetValues"
                                Grid.Row="7"
                                Grid.Column="1"
                                Width="Auto"
                                Margin="0,0,4,0"
                                HorizontalAlignment="Right"
                                Command="{Binding Path=GetValuesCommand}"
                                Focusable="False"
                                IsDefault="False"
                                IsEnabled="{Binding Path=GetValuesIsEnabled}"
                                Style="{DynamicResource Esri_Button}"
                                ToolTip="{Binding Path=GetValuesToolTip}">
                                Get Values
                            </Button>

                        </Grid>

                        <Grid
                            Name="GridSQL"
                            Grid.Row="4"
                            Margin="2,8,2,2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label
                                Name="LabelFromTables"
                                Grid.Row="0"
                                Margin="4,4,4,0"
                                Padding="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                SELECT DISTINCT incid FROM:
                            </Label>
                            <TextBox
                                Name="TextBoxFromTables"
                                Grid.Row="1"
                                MinHeight="24"
                                MaxHeight="44"
                                Margin="4,0,4,4"
                                BorderThickness="1"
                                IsEnabled="True"
                                Tag="ErrorContent"
                                Text="{Binding Path=SqlFromTables, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                TextAlignment="Left"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />

                            <Label
                                Name="LabelMapPath"
                                Grid.Row="2"
                                Margin="4,4,4,0"
                                Padding="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom">
                                WHERE:
                            </Label>
                            <TextBox
                                Name="TextBoxWhereClause"
                                Grid.Row="3"
                                MinHeight="110"
                                MaxHeight="220"
                                Margin="4,0,4,4"
                                BorderThickness="1"
                                IsEnabled="True"
                                Tag="ErrorContent"
                                Text="{Binding Path=SqlWhereClause, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                TextAlignment="Left"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />

                        </Grid>

                    </Grid>
                </Grid>
            </GroupBox>

            <Grid
                x:Name="GridButtons"
                Grid.Row="2"
                Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid
                    x:Name="GridButtons1"
                    Grid.Row="0"
                    HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="ButtonClear"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,2,0"
                        Command="{Binding ClearCommand}"
                        Content="_Clear"
                        IsDefault="False"
                        Style="{DynamicResource Esri_Button}" />
                    <Button
                        x:Name="ButtonLoad"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="2,0,2,0"
                        Command="{Binding LoadCommand}"
                        Content="_Load"
                        IsDefault="False"
                        Style="{DynamicResource Esri_Button}" />
                    <Button
                        x:Name="ButtonSave"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="2,0,0,0"
                        Command="{Binding SaveCommand}"
                        Content="_Save"
                        IsDefault="False"
                        Style="{DynamicResource Esri_Button}" />
                </Grid>

                <Grid
                    x:Name="GridButtons2"
                    Grid.Row="2"
                    HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="ButtonVerify"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="2,0,2,0"
                        Command="{Binding VerifyCommand}"
                        Content="_Verify"
                        IsDefault="False"
                        Style="{DynamicResource Esri_Button}" />
                    <Button
                        x:Name="ButtonOk"
                        Grid.Column="1"
                        Margin="0,0,2,0"
                        Command="{Binding OkCommand}"
                        Content="_OK"
                        IsDefault="True"
                        Style="{DynamicResource Esri_Button}" />
                    <Button
                        x:Name="ButtonCancel"
                        Grid.Column="2"
                        Margin="2,0,0,0"
                        Command="{Binding CancelCommand}"
                        Content="_Cancel"
                        IsCancel="True"
                        Style="{DynamicResource Esri_Button}" />
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>