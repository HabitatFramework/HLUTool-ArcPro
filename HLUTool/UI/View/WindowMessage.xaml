<controls:ProWindow
    x:Class="HLU.UI.View.MessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="237"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowMessage}"
    Focusable="True"
    Icon="..\..\Images\HLUTool16.png"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <StackPanel Margin="4">
        <TextBox
            Name="TextBoxMessage"
            Height="175"
            HorizontalScrollBarVisibility="Auto"
            IsEnabled="True"
            Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
            Text="{Binding MessageText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}"
            VerticalScrollBarVisibility="Auto" />
        <Grid
            Name="GridButtons"
            Height="Auto"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="146*" />
                <ColumnDefinition Width="109*" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="2"
                Command="{Binding OkCommand}"
                ForceCursor="False"
                IsDefault="True"
                Style="{DynamicResource Esri_Button}">
                _OK
            </Button>
        </Grid>
    </StackPanel>
</controls:ProWindow>