<UserControl
    x:Class="HLU.UI.View.UserExportOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowOptions}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">

            <Label
                HorizontalAlignment="Left"
                Content="Set user options for Export"
                FontSize="14"
                FontWeight="Medium" />

            <Expander
                Margin="6,10,0,0"
                Header="Export Options"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="GridExportPath" Grid.Row="2">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                x:Name="LabelExportPath"
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Default Export Directory:" />
                            <controls:InfoButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                Description="Set a default folder path that will be used when exporting data. A different path to the default can still be selected during the export process."
                                Header="Default Export Directory" />

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" MinWidth="350" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="TextBoxExportPath"
                                Grid.Column="1"
                                Height="24"
                                BorderThickness="1"
                                IsEnabled="False"
                                Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
                                Text="{Binding ExportPath, ValidatesOnDataErrors=True}"
                                TextAlignment="Left"
                                ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}"
                                ToolTipService.ShowOnDisabled="True" />
                            <Button
                                x:Name="ButtonBrowseExport"
                                Grid.Column="2"
                                Width="24"
                                Height="24"
                                MinWidth="0"
                                MinHeight="0"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding BrowseExportPathCommand}"
                                Style="{DynamicResource Esri_SmallButton}"
                                ToolTip="Select default export path"
                                ToolTipService.ShowOnDisabled="True">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Source="{Binding ButtonOpenFolderImg}" />
                            </Button>

                        </Grid>
                    </Grid>
                </Grid>

            </Expander>

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium">
            <Hyperlink
                Command="{Binding OpenHyperlinkCommand}"
                CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}"
                NavigateUri="{Binding Hyperlink_UserExportHelp}">
                Learn more about user export options
            </Hyperlink>
        </TextBlock>

    </Grid>

</UserControl>
