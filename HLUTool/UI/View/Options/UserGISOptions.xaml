<UserControl
    x:Class="HLU.UI.View.UserGISOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowOptions}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">

            <Label
                HorizontalAlignment="Left"
                Content="Set user options for GIS"
                FontSize="14"
                FontWeight="Medium" />

            <Expander
                Margin="6,10,0,0"
                Header="Zoom Options"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="Auto" MinWidth="125" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Auto Zoom To Selection" />
                        <ComboBox
                            Grid.Column="1"
                            ItemsSource="{Binding AutoZoomToSelectionOptions}"
                            SelectedValue="{Binding AutoZoomToSelectionOption, ValidatesOnDataErrors=True}" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select when to automatically zoom to the GIS features in the active GIS layer whenever the INCID selection is changed."
                            Header="Auto Zoom To Selection" />

                    </Grid>

                    <Grid Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="{Binding MinAutoZoomText}" />
                        <TextBox
                            x:Name="TextBoxMinAutoZoom"
                            Grid.Column="1"
                            Height="24"
                            HorizontalContentAlignment="Right"
                            BorderThickness="1"
                            Tag="ErrorContent"
                            Text="{Binding MinAutoZoom, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Sets the minimum zoom level at which the auto-zoom function activates. Select a scale value (e.g. 1000). Lower values zoom in closer, while higher values zoom out."
                            Header="Minimum Auto Zoom" />

                    </Grid>

                    <Grid x:Name="GridWorkingFileGDBPath" Grid.Row="4">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                x:Name="LabelWorkingFileGDBPath"
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Working File Geodatabase Directory:" />
                            <controls:InfoButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                Description="Set a folder path for the working File Geodatabase that will be used when peforming large or complex GIS queries."
                                Header="Working File Geodatabase Directory" />

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" MinWidth="350" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="TextBoxWorkingFileGDBPath"
                                Grid.Column="1"
                                Height="24"
                                BorderThickness="1"
                                IsEnabled="False"
                                Tag="ErrorContent"
                                Text="{Binding WorkingFileGDBPath, ValidatesOnDataErrors=True}"
                                TextAlignment="Left"
                                ToolTipService.ShowOnDisabled="True" />
                            <Button
                                x:Name="ButtonBrowseWorkingFileGDB"
                                Grid.Column="2"
                                Width="24"
                                Height="24"
                                MinWidth="0"
                                MinHeight="0"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding BrowseWorkingFileGDBPathCommand}"
                                Style="{DynamicResource Esri_SmallButton}"
                                ToolTip="Select working File GDB path"
                                ToolTipService.ShowOnDisabled="True">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Source="{Binding Path=ButtonOpenFolderImg}" />
                            </Button>

                        </Grid>
                    </Grid>
                </Grid>

            </Expander>

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium">
            <Hyperlink
                Command="{Binding OpenHyperlinkCommand}"
                CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}"
                NavigateUri="{Binding Hyperlink_UserGISHelp}">
                Learn more about user GIS options
            </Hyperlink>
        </TextBlock>

    </Grid>

</UserControl>
