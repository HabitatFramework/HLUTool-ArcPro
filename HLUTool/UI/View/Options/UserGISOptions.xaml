<UserControl
    x:Class="HLU.UI.View.UserGISOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModelOptions}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">

            <Label
                HorizontalAlignment="Left"
                Content="Set user options for GIS"
                FontSize="14"
                FontWeight="Medium" />

            <Expander
                Margin="6,10,0,0"
                Header="Zoom Options"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        Content="{Binding MinAutoZoomText}" />
                    <TextBox
                        x:Name="TextBoxMinAutoZoom"
                        Grid.Column="1"
                        Height="24"
                        HorizontalContentAlignment="Right"
                        BorderThickness="1"
                        Tag="ErrorContent"
                        Text="{Binding MinAutoZoom, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <controls:InfoButton
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        Description="Sets the minimum zoom level at which the auto-zoom function activates. Select a scale value (e.g. 1000). Lower values zoom in closer, while higher values zoom out."
                        Header="Minimum Auto Zoom" />

                </Grid>

            </Expander>

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium">
            <Hyperlink
                Command="{Binding OpenHyperlinkCommand}"
                CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}"
                NavigateUri="{Binding Hyperlink_UserGISHelp}">
                Learn more about user GIS options
            </Hyperlink>
        </TextBlock>

    </Grid>

</UserControl>
