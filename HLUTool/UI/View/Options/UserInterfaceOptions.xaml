<UserControl
    x:Class="HLU.UI.View.UserInterfaceOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModelOptions}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">

            <Label
                HorizontalAlignment="Left"
                Content="Set user options for interface"
                FontSize="14"
                FontWeight="Medium" />

            <Expander
                Margin="6,10,0,0"
                Header="Interface Options"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ShowGroupHeaders}" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Content="Show Group Headers" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            Description="Select if section headers in the main interface will be shown or hidden."
                            Header="Show Group Headers" />

                    </Grid>

                    <Grid Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ShowIHSTab}" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Content="Show IHS Tab" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            Description="Select if the IHS tab will be shown or hidden in the main interface."
                            Header="Show IHS Tab" />

                    </Grid>

                    <Grid Grid.Row="4">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ShowSourceHabitatGroup}" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Content="Show Source Habitat" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            Description="Select if the Source Habitat group, containing the Habitat Class and Habitat Type lists, will be shown or hidden in the main interface.&#10;&#10;The group can be hidden if the source habitat data is in UKHab and primary and secondary habitats are being entered directly without any need to assist the user with translating from other habitat classifications."
                            Header="Show Source Habitat" />

                    </Grid>

                    <Grid Grid.Row="6">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ShowHabitatSecondariesSuggested}" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Content="Show Secondary Suggestions" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            Description="Select if any suggested secondary habitats related to the source habitat type and selected primary habitat are shown."
                            Header="Show Secondary Suggestions" />

                    </Grid>

                    <Grid Grid.Row="8">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ShowNVCCodes}" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Content="Show NVC Codes" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            Description="Select if a list of any potential NVC Codes related to the selected primary habitat will be shown."
                            Header="Show NVC Codes" />

                    </Grid>

                    <Grid Grid.Row="10">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ShowHabitatSummary}" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Content="Show Habitat Summary" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="0,0,0,0"
                            Description="Select if the summary of the primary and secondary codes will be shown."
                            Header="Show Habitat Summary" />

                    </Grid>

                    <Grid Grid.Row="12">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Show OSMM Update Attributes" />
                        <ComboBox
                            Grid.Column="1"
                            MinWidth="135"
                            ItemsSource="{Binding ShowOSMMUpdatesOptions}"
                            SelectedValue="{Binding ShowOSMMUpdatesOption, ValidatesOnDataErrors=True}" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select when Ordnance Survey MasterMap (OSMM) updates should be shown in the main interface. The available options are:&#10;&#10;  * Never - Never show the OSMM Updates section.&#10;  * When Outstanding - Only show the OSMM Updates section when the update is outstanding (the status is ‘Proposed’ or ‘Pending’).&#10;  * Always - Always show the OSMM Updates section."
                            Header="Show OSMM Update Attributes" />

                    </Grid>

                </Grid>

            </Expander>

            <Expander
                Margin="6,10,0,0"
                Header="Interface Preferences"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid
                        x:Name="GridPreferredHabitatClass"
                        Grid.Row="0"
                        HorizontalAlignment="Left">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="160" />
                            <ColumnDefinition Width="Auto" MinWidth="260" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Preferred Habitat Class" />

                        <ComboBox
                            Grid.Column="1"
                            DisplayMemberPath="description"
                            ItemsSource="{Binding HabitatClassCodes}"
                            SelectedValue="{Binding PreferredHabitatClass, ValidatesOnDataErrors=True}"
                            SelectedValuePath="code" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select which Habitat Class in the Habitat tab is automatically selected when the HLU Tool is loaded."
                            Header="Preferred Habitat Class" />
                    </Grid>

                    <Grid
                        x:Name="GridPreferredSecondaryGroup"
                        Grid.Row="2"
                        HorizontalAlignment="Left">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="160" />
                            <ColumnDefinition Width="Auto" MinWidth="140" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Preferred Secondary Group" />

                        <ComboBox
                            Grid.Column="1"
                            DisplayMemberPath="description"
                            ItemsSource="{Binding SecondaryGroupCodes}"
                            SelectedValue="{Binding PreferredSecondaryGroup, ValidatesOnDataErrors=True}"
                            SelectedValuePath="code" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select which Secondary Group in the Habitat tab is automatically selected when the HLU Tool is loaded."
                            Header="Preferred Secondary Group" />
                    </Grid>

                    <Grid
                        x:Name="GridSecondaryTableOrder"
                        Grid.Row="4"
                        HorizontalAlignment="Left">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="160" />
                            <ColumnDefinition Width="Auto" MinWidth="140" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Left"
                            Content="Secondary Table Order" />

                        <ComboBox
                            Grid.Row="0"
                            Grid.Column="1"
                            ItemsSource="{Binding SecondaryCodeOrderOptions}"
                            SelectedValue="{Binding SecondaryCodeOrder, ValidatesOnDataErrors=True}" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select the order that any secondary habitats appear in the secondary table.&#10;&#10;This doesn't affect the order that the secondaries appear in the Summary field."
                            Header="Secondary Table Order" />
                    </Grid>

                </Grid>

            </Expander>

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium">
            <Hyperlink
                Command="{Binding OpenHyperlinkCommand}"
                CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}"
                NavigateUri="{Binding Hyperlink_UserInterfaceHelp}">
                Learn more about user interface options
            </Hyperlink>
        </TextBlock>

    </Grid>

</UserControl>
