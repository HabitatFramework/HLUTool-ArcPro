<UserControl x:Class="HLU.UI.View.DatesOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="4">

        <Label Content="Set options for dates"
            HorizontalAlignment="Left"
            FontSize="14"
            FontWeight="Medium" />

        <Expander Header="Date Options"
            Margin="6,10,0,0"
            IsExpanded="True">

            <Grid
                Margin="12,4,4,2"
                HorizontalAlignment="Left">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="6" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <Label x:Name="LabelSeasonSpring" Content="Spring"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />

                <TextBox x:Name="TextBoxSeasonSpring" Text="{Binding SeasonSpring, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalContentAlignment="Center"
                    BorderThickness="1"
                    Tag="ErrorContent" />

                <Label x:Name="LabelSeasonAutumn" Content="Autumn"
                    Grid.Row="0"
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />

                <TextBox x:Name="TextBoxSeasonAutumn" Text="{Binding SeasonAutumn, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="0"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderThickness="1"
                    Tag="ErrorContent" />

                <Label x:Name="LabelSeasonSummer" Content="Summer"
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />

                <TextBox x:Name="TextBoxSeasonSummer" Text="{Binding SeasonSummer, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalContentAlignment="Center"
                    BorderThickness="1"
                    Tag="ErrorContent" />

                <Label x:Name="LabelSeasonWinter" Content="Winter"
                    Grid.Row="2"
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />

                <TextBox x:Name="TextBoxSeasonWinter" Text="{Binding SeasonWinter, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="2"
                    Grid.Column="4"
                    HorizontalContentAlignment="Center"
                    BorderThickness="1"
                    Tag="ErrorContent" />
            </Grid>
        </Expander>

    </StackPanel>

</UserControl>
