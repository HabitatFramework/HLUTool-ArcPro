<UserControl
    x:Class="HLU.UI.View.AppValidationOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowOptions}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">

            <Label
                HorizontalAlignment="Left"
                Content="Set application options for validation"
                FontSize="14"
                FontWeight="Medium" />

            <Expander
                Margin="6,10,0,0"
                Header="Validation Options"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="GridHabitatSecondaryCodeValidation" Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="320" />
                            <ColumnDefinition Width="Auto" MinWidth="80" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            x:Name="LabelHabitatSecondaryCodeValidation"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Habitat/Secondary Validation" />
                        <ComboBox
                            x:Name="ComboBoxHabitatSecondaryCodeValidation"
                            Grid.Column="1"
                            BorderThickness="1"
                            ItemsSource="{Binding HabitatSecondaryCodeValidationOptions}"
                            SelectedValue="{Binding HabitatSecondaryCodeValidation, ValidatesOnDataErrors=True}"
                            Tag="ErrorContent" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select whether mandatory secondary codes for the selected source habitat type must be added to the secondary table, and if any missing codes are considered as errors or just warnings. The available actions are:&#10;&#10;  * Ignore - Missing mandatory secondary codes for the selected source habitat type are ignored.&#10;  * Warning - Missing mandatory secondary codes for the selected source habitat type are flagged with a warning.&#10;  * Error - Missing mandatory secondary codes for the selected source habitat type are flagged with an error."
                            Header="Habitat/Secondary Validation" />

                    </Grid>

                    <Grid x:Name="GridPrimarySecondaryCodeValidation" Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="320" />
                            <ColumnDefinition Width="Auto" MinWidth="80" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            x:Name="LabelPrimarySecondaryCodeValidation"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Primary/Secondary Validation" />
                        <ComboBox
                            x:Name="ComboBoxPrimarySecondaryCodeValidation"
                            Grid.Column="1"
                            BorderThickness="1"
                            ItemsSource="{Binding PrimarySecondaryCodeValidationOptions}"
                            SelectedValue="{Binding PrimarySecondaryCodeValidation, ValidatesOnDataErrors=True}"
                            Tag="ErrorContent" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select whether secondary codes for the selected primary habitat are validated, i.e. have been added to the secondary table. The available actions are:&#10;&#10;  * Ignore - Missing secondary codes for the selected primary habitat are ignored.&#10;  * Error - Missing secondary codes for the selected primary habitat type are flagged with an error."
                            Header="Primary/Secondary Validation" />

                    </Grid>

                    <Grid x:Name="GridQualityValidation" Grid.Row="4">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="320" />
                            <ColumnDefinition Width="Auto" MinWidth="95" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            x:Name="LabelQualityValidation"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Determination And Interpretation Quality Validation" />
                        <ComboBox
                            x:Name="ComboBoxQualityValidation"
                            Grid.Column="1"
                            BorderThickness="1"
                            ItemsSource="{Binding QualityValidationOptions}"
                            SelectedValue="{Binding QualityValidation, ValidatesOnDataErrors=True}"
                            Tag="ErrorContent" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select whether the determination and interpretation values, used to reflect the quality of the selected primary and secondary habitats, are required. The available actions are:&#10;&#10;  * Optional - Determination and interpretation quality are optional for every INCID.&#10;  * Mandatory - Determination and interpretation quality are mandatory for every INCID."
                            Header="Determination And Interpretation Quality Validation" />
                    </Grid>

                    <Grid x:Name="GridPotentialPriorityDetermQtyValidation" Grid.Row="6">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="320" />
                            <ColumnDefinition Width="Auto" MinWidth="80" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            x:Name="LabelPotentialPriorityDetermQtyValidation"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Content="Potential Priority Habitat Determination Quality Validation" />
                        <ComboBox
                            x:Name="ComboBoxPotentialPriorityDetermQtyValidation"
                            Grid.Column="1"
                            BorderThickness="1"
                            ItemsSource="{Binding PotentialPriorityDetermQtyValidationOptions}"
                            SelectedValue="{Binding PotentialPriorityDetermQtyValidation, ValidatesOnDataErrors=True}"
                            Tag="ErrorContent" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select whether the determination quality value for potential priority habitats is validated. The available actions are:&#10;&#10;  * Ignore - The determination quality value for potential priority habitats is ignored (i.e. is not validated).&#10;  * Error - Invalid determination quality values for potential priority habitats are flagged with an error.&#10;&#10;Ignoring the validation for potential priority habitats enables the user to select determination quality values that indicate that the habitat is, or probably is, in the associated polygon(s). Otherwise determination quality values can only be 'Not present but close to definition' or 'Previously present, but may no longer exist'."
                            Header="Potential Priority Habitat Determination Quality Validation" />

                    </Grid>

                </Grid>

            </Expander>

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium">
            <Hyperlink
                Command="{Binding OpenHyperlinkCommand}"
                CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}"
                NavigateUri="{Binding Hyperlink_AppValidationHelp}">
                Learn more about application validation options
            </Hyperlink>
        </TextBlock>

    </Grid>

</UserControl>
