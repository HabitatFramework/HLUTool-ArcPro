<UserControl x:Class="HLU.UI.View.UpdatesOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionary/MultiEqualityConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Margin="4">

        <Label Content="Set options for updates"
            HorizontalAlignment="Left"
            FontSize="14"
            FontWeight="Medium" />

        <Expander Header="Validation Options"
            Margin="6,10,0,0"
            IsExpanded="True">

            <Grid
                Margin="12,4,4,2"
                HorizontalAlignment="Left">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid x:Name="GridSecondaryCodeValidation"
                    Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="LabelHabitatSecondaryCodeValidation" Content="Habitat/Secondary Validation"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left" />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <ItemsControl ItemsSource="{Binding HabitatSecondaryCodeValidationOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding}"
                                        Margin="0,0,0,5"
                                        GroupName="HabitatSecondaryCodeValidationGroup">
                                        <RadioButton.IsChecked>
                                            <MultiBinding
                                                Converter="{StaticResource multiEqualityConverter}"
                                                Mode="TwoWay">
                                                <!-- First binding: ViewModel property that stores the selected option -->
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="DataContext.HabitatSecondaryCodeValidation"
                                                    RelativeSource="{RelativeSource AncestorType=Window}"
                                                    ValidatesOnDataErrors="True" />
                                                <!-- Second binding: The value of the current item in the ItemsControl -->
                                                <Binding Path="." />
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <Label x:Name="LabelQualityValidation" Content="Determination And Interpretation Quality Validation"
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left" />

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <ItemsControl ItemsSource="{Binding QualityValidationOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding}"
                                        Margin="0,0,0,5"
                                        GroupName="QualityValidationGroup">
                                        <RadioButton.IsChecked>
                                            <MultiBinding
                                                Converter="{StaticResource multiEqualityConverter}"
                                                Mode="TwoWay">
                                                <!-- First binding: ViewModel property that stores the selected option -->
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="DataContext.QualityValidation"
                                                    RelativeSource="{RelativeSource AncestorType=Window}"
                                                    ValidatesOnDataErrors="True" />
                                                <!-- Second binding: The value of the current item in the ItemsControl -->
                                                <Binding Path="." />
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Grid>

        </Expander>

        <Expander Header="Update Options"
            Margin="6,10,0,0"
            IsExpanded="True">

            <Grid
                Margin="12,4,4,2"
                HorizontalAlignment="Left">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid x:Name="GridSubsetUpdateAction"
                    Grid.Row="0"
                    HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="LabelSubsetUpdateAction" Content="Action To Take When Updating Incid Subset"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <ItemsControl ItemsSource="{Binding SubsetUpdateActions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding}"
                                        Margin="0,0,0,5"
                                        GroupName="SubsetUpdateActionGroup">
                                        <RadioButton.IsChecked>
                                            <MultiBinding
                                                Converter="{StaticResource multiEqualityConverter}"
                                                Mode="TwoWay">
                                                <!-- First binding: ViewModel property that stores the selected option -->
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="DataContext.SubsetUpdateAction"
                                                    RelativeSource="{RelativeSource AncestorType=Window}"
                                                    ValidatesOnDataErrors="True" />
                                                <!-- Second binding: The value of the current item in the ItemsControl -->
                                                <Binding Path="." />
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>

                <Grid x:Name="GridIHSUpdateAction"
                    Grid.Row="2"
                    HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="LabelClearIHSUpdateAction" Content="When To Clear IHS Codes After Update"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />

                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2">
                        <ItemsControl ItemsSource="{Binding ClearIHSUpdateActions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding}"
                                                 Margin="0,0,0,5"
                                                 GroupName="ClearIHSUpdateActionGroup">
                                        <RadioButton.IsChecked>
                                            <MultiBinding Converter="{StaticResource multiEqualityConverter}"
                                                          Mode="TwoWay">
                                                <!-- First binding: ViewModel property that stores the selected option -->
                                                <Binding Mode="TwoWay"
                                                         Path="DataContext.ClearIHSUpdateAction"
                                                         RelativeSource="{RelativeSource AncestorType=Window}"
                                                         ValidatesOnDataErrors="True" />
                                                <!-- Second binding: The value of the current item in the ItemsControl -->
                                                <Binding Path="." />
                                            </MultiBinding>
                                        </RadioButton.IsChecked>
                                    </RadioButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Grid>

        </Expander>

    </StackPanel>

</UserControl>
