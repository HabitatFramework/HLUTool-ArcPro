<UserControl
    x:Class="HLU.UI.View.UserSQLOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowOptions}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="4">

            <Label
                HorizontalAlignment="Left"
                Content="Set user options for SQL"
                FontSize="14"
                FontWeight="Medium" />

            <Expander
                Margin="6,10,0,0"
                Header="Filter Options"
                IsExpanded="True">

                <Grid Margin="12,4,4,2" HorizontalAlignment="Left">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="GridSQLSelect" Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="140" />
                            <ColumnDefinition Width="Auto" MinWidth="70" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            x:Name="LabelMaxGetValues"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Get Values Count" />
                        <TextBox
                            x:Name="TextBoxGetValues"
                            Grid.Column="1"
                            Height="24"
                            HorizontalContentAlignment="Right"
                            BorderThickness="1"
                            Tag="ErrorContent"
                            Text="{Binding GetValueRows, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select the maximum number of unique field values that will be retrieved each time the 'Get Values' button is pressed when using the 'Advanced Query Builder'. The maximum number cannot exceed 100,000.&#10;&#10;This number should be reduced if performance issues are experienced."
                            Header="Get Values Count" />
                    </Grid>

                    <Grid x:Name="GridWarnBeforeGISSelect" Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="140" />
                            <ColumnDefinition Width="Auto" MinWidth="70" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            x:Name="LabelWarnBeforeGISSelect"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Warn Before GIS Select" />
                        <ComboBox
                            x:Name="ComboBoxWarnBeforeGISSelect"
                            Grid.Column="1"
                            BorderThickness="1"
                            ItemsSource="{Binding WarnBeforeGISSelectOptions}"
                            SelectedValue="{Binding WarnBeforeGISSelect, ValidatesOnDataErrors=True}"
                            Tag="ErrorContent" />
                        <controls:InfoButton
                            Grid.Column="2"
                            Margin="5,0,0,0"
                            Description="Select if/when a pop-up warning message should be displayed prior to selecting features in GIS, e.g. when applying a filter or when selecting the features for all INCIDs in the active filter. The available options are:&#10;&#10;  * Prompt - Always prompt the user when attempting to update a subset of INCID features (see Attribute Updates for an example of the prompt dialog).&#10;  * Split - Always perform a logical split before applying the attribute updates.&#10;  * All - Always apply the attribute update to all features belonging to the INCID regardless of which features of the INCID are currently selected."
                            Header="Warn Before GIS Select" />
                    </Grid>

                    <Grid x:Name="GridSQLPath" Grid.Row="4">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                x:Name="LabelSQLPath"
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Default Query Directory:" />
                            <controls:InfoButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                Description="Set a default folder path that will be used when saving or loading queries with the 'Advanced Query Builder'. A different path to the default can still be selected during the save and load process."
                                Header="Default Query Directory" />

                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" MinWidth="350" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="TextBoxSQLPath"
                                Grid.Column="1"
                                Height="24"
                                BorderThickness="1"
                                IsEnabled="False"
                                Tag="ErrorContent"
                                Text="{Binding SQLPath, ValidatesOnDataErrors=True}"
                                TextAlignment="Left"
                                ToolTipService.ShowOnDisabled="True" />
                            <Button
                                x:Name="ButtonBrowseSql"
                                Grid.Column="2"
                                Width="24"
                                Height="24"
                                MinWidth="0"
                                MinHeight="0"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding BrowseSQLPathCommand}"
                                Style="{DynamicResource Esri_SmallButton}"
                                ToolTip="Select default SQL path"
                                ToolTipService.ShowOnDisabled="True">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Source="{Binding Path=ButtonOpenFolderImg}" />
                            </Button>

                        </Grid>
                    </Grid>
                </Grid>

            </Expander>

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="8,0,0,10"
            HorizontalAlignment="Left"
            FontWeight="Medium">
            <Hyperlink
                Command="{Binding OpenHyperlinkCommand}"
                CommandParameter="{Binding NavigateUri, RelativeSource={RelativeSource Self}}"
                NavigateUri="{Binding Hyperlink_UserSQLHelp}">
                Learn more about user SQL options
            </Hyperlink>
        </TextBlock>

    </Grid>

</UserControl>
