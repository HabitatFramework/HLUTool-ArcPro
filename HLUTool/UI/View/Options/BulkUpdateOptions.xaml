<UserControl x:Class="HLU.UI.View.BulkUpdateOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Dictionary/MultiEqualityConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Margin="4">

        <Label Content="Set options for bulk update"
            HorizontalAlignment="Left"
            FontSize="14"
            FontWeight="Medium" />

        <Expander Header="Bulk Update Defaults"
            Margin="6,10,0,0"
            IsExpanded="True">

            <Grid
                Margin="12,4,4,2"
                HorizontalAlignment="Left">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <CheckBox IsChecked="{Binding BulkDeleteOrphanBapHabitats}"
                    x:Name="CheckBoxBulkDeleteOrphanBapHabitats"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />

                <Label Content="Delete Orphan Priority Habitats"
                    x:Name="LabelBulkDeleteOrphanBapHabitats"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />

                <CheckBox IsChecked="{Binding BulkDeletePotentialBapHabitats}"
                    x:Name="CheckBoxBulkDeletePotentialBapHabitats"
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />

                <Label Content="Delete Potential Priority Habitats"
                    x:Name="LabelBulkDeletePotentialBapHabitats"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />

            </Grid>
        </Expander>

        <Expander Header="OSMM Bulk Update Defaults"
            Margin="6,10,0,0"
            IsExpanded="True">

            <Grid
                Margin="12,4,4,2"
                HorizontalAlignment="Left">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid x:Name="GridPriorityDeterminationQuality"
                      Grid.Row="0"
                      HorizontalAlignment="Left">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                          MinWidth="170" />
                        <ColumnDefinition Width="Auto"
                                          MinWidth="350" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Priority Determination Quality"
                           x:Name="LabelDeterminationQuality"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />

                    <ComboBox ItemsSource="{Binding BulkDeterminationQualityCodes}"
                              x:Name="ComboBoxDeterminationQuality"
                              Grid.Column="1"
                              BorderThickness="1"
                              DisplayMemberPath="description"
                              SelectedValue="{Binding BulkDeterminationQuality, ValidatesOnDataErrors=True}"
                              SelectedValuePath="code"
                              Tag="ErrorContent" />

                </Grid>

                <Grid x:Name="GridPriorityInterpretationQuality"
                      Grid.Row="1"
                      HorizontalAlignment="Left">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                          MinWidth="170" />
                        <ColumnDefinition Width="Auto"
                                          MinWidth="90" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Priority Interpretation Quality"
                           x:Name="LabelInterpretationQuality"
                           Grid.Row="2"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />

                    <ComboBox ItemsSource="{Binding BulkInterpretationQualityCodes}"
                              x:Name="ComboBoxInterpretationQuality"
                              Grid.Row="2"
                              Grid.Column="1"
                              BorderThickness="1"
                              DisplayMemberPath="description"
                              SelectedValue="{Binding BulkInterpretationQuality, ValidatesOnDataErrors=True}"
                              SelectedValuePath="code"
                              Tag="ErrorContent" />

                </Grid>
            </Grid>
        </Expander>

    </StackPanel>

</UserControl>
