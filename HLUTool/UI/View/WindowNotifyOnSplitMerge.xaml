<controls:ProWindow
    x:Class="HLU.UI.View.WindowNotifyOnSplitMerge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls"
    Title="{Binding Path=WindowTitle}"
    MinWidth="300"
    MinHeight="160"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>
            <GroupBox Name="GroupNotifyOnSplitMerge" Header="{Binding Path=GroupBoxNotifyOnSplitMergeHeader}">
                <Grid Name="GridNotifyOnSplitMerge" Margin="2,2,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="26" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelMessage"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="0,4,0,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <TextBlock
                            Name="TextBlockMessage"
                            Text="{Binding Path=LabelMessage}"
                            TextWrapping="Wrap" />
                    </Label>
                    <Border
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,8,0,8"
                        Padding="0"
                        BorderBrush="Black"
                        BorderThickness="0.5"
                        Opacity="0.5" />
                    <Label
                        Name="LabelDoNotTellAgain"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,4,0,4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        Don't tell me again
                    </Label>
                    <CheckBox
                        Name="CheckBoxDoNotTellAgain"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,4,0,4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsChecked="{Binding Path=DoNotTellAgain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </GroupBox>
            <Grid Name="GridButtons" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="2"
                    Margin="0,0,0,0"
                    Command="{Binding Path=OkCommand}"
                    IsDefault="True"
                    Style="{DynamicResource Esri_Button}">
                    _Ok
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>
