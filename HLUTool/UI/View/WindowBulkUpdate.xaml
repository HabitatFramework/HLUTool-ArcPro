<controls:ProWindow x:Class="HLU.UI.View.WindowBulkUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    Title="{Binding Path=WindowTitle}"
    Height="Auto"
    MinWidth="480"
    Icon="..\..\Icons\HLUIcon.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
                <!--  <ResourceDictionary Source="Dictionary/ThemeDarkGrey.xaml"/>  -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>
            <GroupBox Header="Bulk Update Options"
                Name="GroupBoxWindowBulkUpdate">

                <Grid
                    Name="GridWindowBulkUpdate"
                    Margin="2,8,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid
                        x:Name="GridDeleteOrphanBapHabitats"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Delete Orphan Priority Habitats?"
                            Name="LabelDeleteOrphanBapHabitats"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Path=EnableDeleteOrphanBapHabitats}" />
                        <CheckBox
                            Name="CheckBoxDeleteOrphanBapHabitats"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Path=DeleteOrphanBapHabitats}"
                            IsEnabled="{Binding Path=EnableDeleteOrphanBapHabitats}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeletePotentialBapHabitats"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Delete Potential Priority Habitats?"
                            Name="LabelDeletePotentialBapHabitats"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Path=EnableDeletePotentialBapHabitats}" />
                        <CheckBox
                            Name="CheckBoxDeletePotentialBapHabitats"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Path=DeletePotentialBapHabitats}"
                            IsEnabled="{Binding Path=EnableDeletePotentialBapHabitats}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeleteIHSCodes"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Delete Existing IHS Codes?"
                            Name="LabelDeleteIHSCodes"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Path=EnableDeleteIHSCodes}" />
                        <CheckBox
                            x:Name="CheckBoxDeleteIHSCodes"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding DeleteIHSCodes}"
                            IsEnabled="{Binding EnableDeleteIHSCodes}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeleteSecondaryCodes"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Delete Existing Secondary Codes?"
                            Name="LabelDeleteSecondaryCodes"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Path=EnableDeleteSecondaryCodes}" />
                        <CheckBox
                            x:Name="CheckBoxDeleteSecondaryCodes"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding DeleteSecondaryCodes}"
                            IsEnabled="{Binding EnableDeleteSecondaryCodes}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeleteHistorySources"
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Delete Existing Source Rows?"
                            Name="LabelDeleteSources"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="false" />
                        <CheckBox
                            Name="CheckBoxDeleteSources"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Path=DeleteSources,
                                                Mode=OneWay}"
                            IsEnabled="false" />

                        <Label Content="Create History Records?"
                            x:Name="LabelCreateHistory"
                            Grid.Column="2"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding DisableInOSMMBulkUpdateMode}" />
                        <CheckBox
                            x:Name="CheckBoxCreateHistory"
                            Grid.Column="3"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CreateHistory}"
                            IsEnabled="{Binding DisableInOSMMBulkUpdateMode}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeterminationQuality"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="260" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Habitat Determination Quality?"
                            Name="LabelOSMMDeterminationQuality"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Visibility="{Binding Path=ShowInOSMMBulkUpdateMode}" />
                        <ComboBox ItemsSource="{Binding BapDeterminationQualityCodes, UpdateSourceTrigger=PropertyChanged}"
                            Name="ComboBoxDeterminationQuality"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="4,6,4,2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            DisplayMemberPath="description"
                            IsEditable="False"
                            IsReadOnly="False"
                            SelectedValue="{Binding DeterminationQuality,
                                                    ValidatesOnDataErrors=True}"
                            SelectedValuePath="code"
                            Tag="ErrorContent"
                            ToolTipService.ShowOnDisabled="True"
                            Visibility="{Binding Path=ShowInOSMMBulkUpdateMode}" />
                    </Grid>

                    <Grid
                        x:Name="GridInterpretationQuality"
                        Grid.Row="5"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <Label Content="Habitat Interpretation Quality?"
                            Name="LabelInterpretationQuality"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Visibility="{Binding Path=ShowInOSMMBulkUpdateMode}" />
                        <ComboBox ItemsSource="{Binding InterpretationQualityCodes, UpdateSourceTrigger=PropertyChanged}"
                            Name="ComboBoxInterpretationQuality"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="4,6,4,2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            DisplayMemberPath="description"
                            IsEditable="False"
                            IsReadOnly="False"
                            SelectedValue="{Binding InterpretationQuality,
                                                    ValidatesOnDataErrors=True}"
                            SelectedValuePath="code"
                            Tag="ErrorContent"
                            ToolTipService.ShowOnDisabled="True"
                            Visibility="{Binding Path=ShowInOSMMBulkUpdateMode}" />
                    </Grid>

                </Grid>

            </GroupBox>
            <Grid
                Name="GridButtons"
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="1"
                    Margin="0,0,2,0"
                    Command="{Binding Path=OkCommand}"
                    IsDefault="True">
                    _OK
                </Button>
                <Button
                    Name="ButtonCancel"
                    Grid.Column="2"
                    Margin="2,0,0,0"
                    Command="{Binding Path=CancelCommand}"
                    IsCancel="True">
                    _Cancel
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>