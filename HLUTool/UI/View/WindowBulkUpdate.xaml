<controls:ProWindow
    x:Class="HLU.UI.View.WindowBulkUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:HLU.UI.View"
    Title="{Binding WindowTitle}"
    Height="Auto"
    MinWidth="480"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowBulkUpdate}"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <GroupBox Name="GroupBoxWindowBulkUpdate" Header="Bulk Update Options">

                <Grid Name="GridWindowBulkUpdate" Margin="2,8,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid
                        x:Name="GridDeleteOrphanBapHabitats"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelDeleteOrphanBapHabitats"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Delete Orphan Priority Habitats?"
                            IsEnabled="{Binding EnableDeleteOrphanBapHabitats}" />
                        <CheckBox
                            Name="CheckBoxDeleteOrphanBapHabitats"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding DeleteOrphanBapHabitats}"
                            IsEnabled="{Binding EnableDeleteOrphanBapHabitats}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeletePotentialBapHabitats"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelDeletePotentialBapHabitats"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Delete Potential Priority Habitats?"
                            IsEnabled="{Binding EnableDeletePotentialBapHabitats}" />
                        <CheckBox
                            Name="CheckBoxDeletePotentialBapHabitats"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding DeletePotentialBapHabitats}"
                            IsEnabled="{Binding EnableDeletePotentialBapHabitats}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeleteIHSCodes"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelDeleteIHSCodes"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Delete Existing IHS Codes?"
                            IsEnabled="{Binding EnableDeleteIHSCodes}" />
                        <CheckBox
                            x:Name="CheckBoxDeleteIHSCodes"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding DeleteIHSCodes}"
                            IsEnabled="{Binding EnableDeleteIHSCodes}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeleteSecondaryCodes"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelDeleteSecondaryCodes"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Delete Existing Secondary Codes?"
                            IsEnabled="{Binding EnableDeleteSecondaryCodes}" />
                        <CheckBox
                            x:Name="CheckBoxDeleteSecondaryCodes"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding DeleteSecondaryCodes}"
                            IsEnabled="{Binding EnableDeleteSecondaryCodes}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeleteHistorySources"
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelDeleteSources"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Delete Existing Source Rows?"
                            IsEnabled="false" />
                        <CheckBox
                            Name="CheckBoxDeleteSources"
                            Grid.Column="1"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Path=DeleteSources, Mode=OneWay}"
                            IsEnabled="false" />

                        <Label
                            x:Name="LabelCreateHistory"
                            Grid.Column="2"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Create History Records?"
                            IsEnabled="{Binding DisableInOSMMBulkUpdateMode}" />
                        <CheckBox
                            x:Name="CheckBoxCreateHistory"
                            Grid.Column="3"
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding CreateHistory}"
                            IsEnabled="{Binding DisableInOSMMBulkUpdateMode}" />
                    </Grid>

                    <Grid
                        x:Name="GridDeterminationQuality"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="260" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelOSMMDeterminationQuality"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Habitat Determination Quality?"
                            Visibility="{Binding ShowInOSMMBulkUpdateMode}" />
                        <ComboBox
                            Name="ComboBoxDeterminationQuality"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="4,6,4,2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            DisplayMemberPath="description"
                            IsEditable="False"
                            IsReadOnly="False"
                            ItemsSource="{Binding BapDeterminationQualityCodes, UpdateSourceTrigger=PropertyChanged}"
                            SelectedValue="{Binding DeterminationQuality, ValidatesOnDataErrors=True}"
                            SelectedValuePath="code"
                            Tag="ErrorContent"
                            ToolTipService.ShowOnDisabled="True"
                            Visibility="{Binding ShowInOSMMBulkUpdateMode}" />
                    </Grid>

                    <Grid
                        x:Name="GridInterpretationQuality"
                        Grid.Row="5"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Name="LabelInterpretationQuality"
                            Grid.Column="0"
                            Margin="8,8,8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Habitat Interpretation Quality?"
                            Visibility="{Binding ShowInOSMMBulkUpdateMode}" />
                        <ComboBox
                            Name="ComboBoxInterpretationQuality"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="4,6,4,2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            DisplayMemberPath="description"
                            IsEditable="False"
                            IsReadOnly="False"
                            ItemsSource="{Binding InterpretationQualityCodes, UpdateSourceTrigger=PropertyChanged}"
                            SelectedValue="{Binding InterpretationQuality, ValidatesOnDataErrors=True}"
                            SelectedValuePath="code"
                            Tag="ErrorContent"
                            ToolTipService.ShowOnDisabled="True"
                            Visibility="{Binding ShowInOSMMBulkUpdateMode}" />
                    </Grid>

                </Grid>

            </GroupBox>
            <Grid
                Name="GridButtons"
                Grid.Row="2"
                Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="1"
                    Margin="0,0,2,0"
                    Command="{Binding OkCommand}"
                    IsDefault="True"
                    Style="{DynamicResource Esri_Button}">
                    _OK
                </Button>
                <Button
                    Name="ButtonCancel"
                    Grid.Column="2"
                    Margin="2,0,0,0"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Style="{DynamicResource Esri_Button}">
                    _Cancel
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>