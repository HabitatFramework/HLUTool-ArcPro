<controls:ProWindow
    x:Class="HLU.UI.View.WindowCompletePhysicalSplit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    Title="{Binding Path=WindowTitle}"
    Height="250"
    MinWidth="300"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>
            <GroupBox
                Name="GroupBoxReason"
                Grid.Row="0"
                Header="Reason">
                <Grid Name="GridReason" Margin="2,8,2,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ComboBox
                        Name="ComboBoxReason"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="8,8,8,8"
                        VerticalAlignment="Center"
                        DisplayMemberPath="description"
                        IsEditable="True"
                        IsEnabled="{Binding Path=ReasonProcessEnabled}"
                        IsReadOnly="False"
                        ItemsSource="{Binding Path=ReasonCodes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValue="{Binding Path=Reason, ValidatesOnDataErrors=True}"
                        SelectedValuePath="code"
                        Tag="ErrorContent"
                        ToolTipService.ShowOnDisabled="True" />
                </Grid>
            </GroupBox>
            <GroupBox
                Name="GroupBoxProcess"
                Grid.Row="2"
                Header="Process">
                <Grid Name="GridProcess" Margin="2,8,2,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ComboBox
                        Name="ComboBoxProcess"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="8,8,8,8"
                        VerticalAlignment="Center"
                        DisplayMemberPath="description"
                        IsEditable="True"
                        IsEnabled="{Binding Path=ReasonProcessEnabled}"
                        IsReadOnly="False"
                        ItemsSource="{Binding Path=ProcessCodes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValue="{Binding Path=Process, ValidatesOnDataErrors=True}"
                        SelectedValuePath="code"
                        Tag="ErrorContent"
                        ToolTipService.ShowOnDisabled="True" />
                </Grid>
            </GroupBox>
            <Grid Name="GridButtons" Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="1"
                    Margin="0,0,2,0"
                    Command="{Binding Path=OkCommand}"
                    IsDefault="True">
                    _OK
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>