<controls:ProWindow x:Class="HLU.UI.View.WindowExport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    Title="{Binding Path=WindowTitle}"
    Height="194"
    MinWidth="320"
    Icon="..\..\Icons\HLUIcon.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Width"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>
            <GroupBox Header="Export"
                Name="GroupBoxExport">
                <Grid
                    Name="GridExport"
                    Margin="2,8,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelLayer"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        Layer
                    </Label>
                    <TextBox Text="{Binding Path=LayerName}"
                        Name="TextBoxLayer"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,8,8"
                        IsEnabled="False" />
                    <Label
                        Name="LabelFormat"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        Export Format
                    </Label>
                    <ComboBox ItemsSource="{Binding Path=ExportFormats, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Name="ComboBoxLayer"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,0,8,8"
                        DisplayMemberPath="export_name"
                        IsEditable="True"
                        IsReadOnly="True"
                        SelectedValue="{Binding Path=ExportID,
                                                ValidatesOnDataErrors=True}"
                        SelectedValuePath="export_id"
                        Tag="ErrorContent" />
                    <Label
                        Name="LabelSelectedOnly"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding Path=HaveSelection}">
                        Selected Only
                    </Label>
                    <Grid
                        Name="GridSelectedOnly"
                        Grid.Row="2"
                        Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Name="CheckBoxSelectedOnly"
                            Grid.Column="0"
                            Margin="8,0,8,8"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Path=SelectedOnly}"
                            IsEnabled="{Binding Path=HaveSelection}" />
                        <Label Content="{Binding Path=SelectedNumber}"
                            Name="LabelSelectedNumber"
                            Grid.Column="1"
                            Margin="0,0,8,8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding Path=HaveSelection}" />
                    </Grid>
                </Grid>
            </GroupBox>
            <Grid
                Name="GridButtons"
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="1"
                    Margin="0,0,2,0"
                    Command="{Binding Path=OkCommand}"
                    IsDefault="True">
                    _OK
                </Button>
                <Button
                    Name="ButtonCancel"
                    Grid.Column="2"
                    Margin="2,0,0,0"
                    Command="{Binding Path=CancelCommand}"
                    IsCancel="True">
                    _Cancel
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>