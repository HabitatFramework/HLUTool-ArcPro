<controls:ProWindow
    x:Class="HLU.UI.View.WindowExport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    MinWidth="330"
    MinHeight="210"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowExport}"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox
                Name="GroupBoxExport"
                Grid.Row="0"
                Header="Export">
                <Grid Name="GridExport" Margin="2,8,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelLayer"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        Layer
                    </Label>
                    <TextBox
                        Name="TextBoxLayer"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,8,8"
                        IsEnabled="False"
                        Text="{Binding LayerName}" />
                    <Label
                        Name="LabelFormat"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        Export Format
                    </Label>
                    <ComboBox
                        Name="ComboBoxLayer"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,0,8,8"
                        DisplayMemberPath="export_name"
                        IsEditable="True"
                        IsReadOnly="True"
                        ItemsSource="{Binding Path=ExportFormats, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValue="{Binding Path=ExportID, ValidatesOnDataErrors=True}"
                        SelectedValuePath="export_id"
                        Tag="ErrorContent" />
                    <Label
                        Name="LabelSelectedOnly"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding HaveSelection}">
                        Selected Only
                    </Label>
                    <Grid
                        Name="GridSelectedOnly"
                        Grid.Row="2"
                        Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Name="CheckBoxSelectedOnly"
                            Grid.Column="0"
                            Margin="8,0,8,8"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsChecked="{Binding SelectedOnly}"
                            IsEnabled="{Binding HaveSelection}" />
                        <Label
                            Name="LabelSelectedNumber"
                            Grid.Column="1"
                            Margin="0,0,8,8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="{Binding SelectedNumber}"
                            IsEnabled="{Binding HaveSelection}" />
                    </Grid>
                </Grid>
            </GroupBox>

            <Grid
                Name="GridButtons"
                Grid.Row="2"
                Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="1"
                    Margin="0,0,2,0"
                    Command="{Binding OkCommand}"
                    IsDefault="True"
                    Style="{DynamicResource Esri_Button}">
                    _OK
                </Button>
                <Button
                    Name="ButtonCancel"
                    Grid.Column="2"
                    Margin="2,0,0,0"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Style="{DynamicResource Esri_Button}">
                    _Cancel
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>