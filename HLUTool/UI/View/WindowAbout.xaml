<controls:ProWindow
    x:Class="HLU.UI.View.WindowAbout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Path=WindowTitle}"
    MinWidth="450"
    MinHeight="550"
    MaxWidth="600"
    MaxHeight="800"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowOptions}"
    Focusable="True"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
                <!--<ResourceDictionary Source="Dictionary\WindowDictionary.xaml" />
                <ResourceDictionary Source="Dictionary\HluTheme.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FocusManager.FocusedElement="{Binding ElementName=TextBoxQueryIncid}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox
                Name="GroupVersions"
                Grid.Row="0"
                Margin="0"
                Header="Versions">

                <Grid Name="GridVersions" Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="65" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelAppVersion"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Application:
                    </Label>
                    <TextBox
                        Name="TextAppVersion"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=AppVersion}" />
                    <Label
                        Name="LabelDbVersion"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Database:
                    </Label>
                    <TextBox
                        Name="TextDbVersion"
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=DbVersion}" />
                    <Label
                        Name="LabelDataVersion"
                        Grid.Row="0"
                        Grid.Column="4"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Data:
                    </Label>
                    <TextBox
                        Name="TextDataVersion"
                        Grid.Row="0"
                        Grid.Column="5"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=DataVersion}" />
                </Grid>

            </GroupBox>

            <GroupBox
                Name="GroupConnection"
                Grid.Row="1"
                Header="Database Connection">

                <Grid Name="GridConnection" Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelConnectionType"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Db Type:
                    </Label>
                    <TextBox
                        Name="TextConnectionType"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=ConnectionType}" />
                    <Label
                        Name="LabelConnectionSettings"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Db Settings:
                    </Label>
                    <TextBox
                        Name="TextConnectionSettings"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=ConnectionSettings}" />
                </Grid>

            </GroupBox>

            <GroupBox
                Name="GroupUser"
                Grid.Row="2"
                Header="User Details">

                <Grid Name="GridUser" Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelUserId"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        User ID:
                    </Label>
                    <TextBox
                        Name="TextUserId"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=UserId}" />
                    <Label
                        Name="LabelUserName"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        User Name:
                    </Label>
                    <TextBox
                        Name="TextUserName"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=UserName}" />
                </Grid>

            </GroupBox>

            <GroupBox
                Name="GroupCopyright"
                Grid.Row="3"
                Header="Copyright">

                <Grid Name="GridCopyright" Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelCopyright"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Copyright:
                    </Label>
                    <TextBox
                        Name="TextCopyright"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        Text="{Binding Path=AssemblyCopyright}"
                        TextWrapping="Wrap" />
                </Grid>

            </GroupBox>

            <GroupBox
                Name="GroupUserGuides"
                Grid.Row="4"
                Header="Help Guides">

                <Grid Name="GridUserGuides" Margin="2,8,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelUserGuide"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        User Guide:
                    </Label>
                    <TextBlock
                        Name="TextUserGuide"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,8,8"
                        VerticalAlignment="Center">
                        <Hyperlink NavigateUri="{Binding Path=UserGuideURL}" RequestNavigate="Hyperlink_RequestNavigate">
                            <TextBlock Text="{Binding Path=UserGuideText}" />
                        </Hyperlink>
                    </TextBlock>
                    <Label
                        Name="LabelTechnicalGuide"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        Technical Guide:
                    </Label>
                    <TextBlock
                        Name="TextTechnicalGuide"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,0,8,4"
                        VerticalAlignment="Center">
                        <Hyperlink NavigateUri="{Binding Path=TechnicalGuideURL}" RequestNavigate="Hyperlink_RequestNavigate">
                            <TextBlock Text="{Binding Path=TechnicalGuideText}" />
                        </Hyperlink>
                    </TextBlock>
                </Grid>

            </GroupBox>

            <Grid Name="GridButtons" Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="2"
                    Command="{Binding Path=OkCommand}"
                    ForceCursor="False"
                    IsDefault="True"
                    Style="{DynamicResource Esri_Button}">
                    _OK
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>