<controls:ProWindow x:Class="HLU.UI.View.WindowAbout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls"
    Title="{Binding Path=WindowTitle}"
    Width="460"
    Height="Auto"
    Focusable="True"
    Icon="..\..\Icons\HLUIcon.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
                <!--<ResourceDictionary Source="Dictionary\WindowDictionary.xaml" />
                <ResourceDictionary Source="Dictionary\HluTheme.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel
        Width="Auto"
        Margin="4,4,4,4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FocusManager.FocusedElement="{Binding ElementName=TextBoxQueryIncid}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>

            <GroupBox Header="Versions"
                Name="GroupVersions"
                Grid.Row="0"
                Margin="0">

                <Grid
                    Name="GridVersions"
                    Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="65" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelAppVersion"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Application:
                    </Label>
                    <TextBox Text="{Binding Path=AppVersion}"
                        Name="TextAppVersion"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                    <Label
                        Name="LabelDbVersion"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Database:
                    </Label>
                    <TextBox Text="{Binding Path=DbVersion}"
                        Name="TextDbVersion"
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                    <Label
                        Name="LabelDataVersion"
                        Grid.Row="0"
                        Grid.Column="4"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Data:
                    </Label>
                    <TextBox Text="{Binding Path=DataVersion}"
                        Name="TextDataVersion"
                        Grid.Row="0"
                        Grid.Column="5"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                </Grid>

            </GroupBox>

            <GroupBox Header="Database Connection"
                Name="GroupConnection"
                Grid.Row="1">

                <Grid
                    Name="GridConnection"
                    Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelConnectionType"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Db Type:
                    </Label>
                    <TextBox Text="{Binding Path=ConnectionType}"
                        Name="TextConnectionType"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                    <Label
                        Name="LabelConnectionSettings"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Db Settings:
                    </Label>
                    <TextBox Text="{Binding Path=ConnectionSettings}"
                        Name="TextConnectionSettings"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                </Grid>

            </GroupBox>

            <GroupBox Header="User Details"
                Name="GroupUser"
                Grid.Row="2">

                <Grid
                    Name="GridUser"
                    Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelUserId"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        User ID:
                    </Label>
                    <TextBox Text="{Binding Path=UserId}"
                        Name="TextUserId"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                    <Label
                        Name="LabelUserName"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        User Name:
                    </Label>
                    <TextBox Text="{Binding Path=UserName}"
                        Name="TextUserName"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False" />
                </Grid>

            </GroupBox>

            <GroupBox Header="Copyright"
                Name="GroupCopyright"
                Grid.Row="3">

                <Grid
                    Name="GridCopyright"
                    Margin="2,4,2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelCopyright"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,2,0,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Copyright:
                    </Label>
                    <TextBox Text="{Binding Path=Copyright}"
                        Name="TextCopyright"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,2,2,2"
                        IsReadOnly="True"
                        IsTabStop="False"
                        TextWrapping="Wrap" />
                </Grid>

            </GroupBox>

            <GroupBox Header="Help Guides"
                Name="GroupUserGuides"
                Grid.Row="4">

                <Grid
                    Name="GridUserGuides"
                    Margin="2,8,2,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="LabelUserGuide"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        User Guide:
                    </Label>
                    <TextBlock
                        Name="TextUserGuide"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="8,0,8,8">
                        <Hyperlink
                            NavigateUri="{Binding Path=UserGuideURL}"
                            RequestNavigate="Hyperlink_RequestNavigate">
                            <TextBlock Text="{Binding Path=UserGuideText}" />
                        </Hyperlink>
                    </TextBlock>
                    <Label
                        Name="LabelTechnicalGuide"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,0,4"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        Technical Guide:
                    </Label>
                    <TextBlock
                        Name="TextTechnicalGuide"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="8,0,8,4">
                        <Hyperlink
                            NavigateUri="{Binding Path=TechnicalGuideURL}"
                            RequestNavigate="Hyperlink_RequestNavigate">
                            <TextBlock Text="{Binding Path=TechnicalGuideText}" />
                        </Hyperlink>
                    </TextBlock>
                </Grid>

            </GroupBox>

            <Grid
                Name="GridButtons"
                Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="ButtonOk"
                    Grid.Column="2"
                    Command="{Binding Path=OkCommand}"
                    ForceCursor="False"
                    IsDefault="True">
                    _OK
                </Button>
            </Grid>
        </Grid>
    </DockPanel>
</controls:ProWindow>