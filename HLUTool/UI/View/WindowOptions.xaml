<controls:ProWindow
    x:Class="HLU.UI.View.WindowOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls"
    xmlns:viewModel="clr-namespace:HLU.UI.ViewModel"
    Title="{Binding Path=WindowTitle}"
    MinWidth="700"
    MinHeight="570"
    MaxWidth="800"
    MaxHeight="600"
    Focusable="True"
    Icon="..\..\Icons\HLUIcon.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary/NullableValueConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary/ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!--  Content Area (expands)  -->
                <RowDefinition Height="Auto" />
                <!--  Fixed Buttons  -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <!--  Navigation  -->
                <ColumnDefinition Width="*" />
                <!--  Content  -->
            </Grid.ColumnDefinitions>

            <!--  Navigation List with Border  -->
            <Border
                Grid.Column="0"
                Margin="0,0,5,0"
                BorderBrush="Gray"
                BorderThickness="1">

                <ListBox
                    x:Name="NavigationList"
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding GroupedNavigationItems}"
                    SelectedItem="{Binding SelectedView}">

                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Padding="5,3"
                                        Background="DarkGray"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Text="{Binding Path=Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Padding="0,3" Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Border>

            <!--  Content Area with Border and ScrollViewer  -->
            <Border
                Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1">

                <ScrollViewer
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalScrollBarVisibility="Auto">
                    <ContentControl Padding="5" Content="{Binding SelectedView.Content}" />
                </ScrollViewer>
            </Border>

            <!--  Buttons (Fixed Position)  -->
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="ButtonSave"
                    Width="80"
                    Margin="5"
                    Command="{Binding SaveCommand}"
                    Content="_OK"
                    Style="{DynamicResource Esri_Button}" />
                <Button
                    x:Name="ButtonCancel"
                    Width="80"
                    Margin="5"
                    Command="{Binding CancelCommand}"
                    Content="_Cancel"
                    Style="{DynamicResource Esri_Button}" />
            </StackPanel>

        </Grid>
    </DockPanel>
</controls:ProWindow>