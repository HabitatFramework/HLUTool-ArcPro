<controls:ProWindow
    x:Class="HLU.UI.View.WindowOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:HLU.UI.ViewModel"
    Title="{Binding WindowTitle}"
    MinWidth="750"
    MinHeight="500"
    MaxWidth="1000"
    MaxHeight="800"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowOptions}"
    Focusable="True"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ValidationTemplates.xaml" />
                <ResourceDictionary Source="Dictionary/NullableValueConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary/ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <DockPanel Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!--  Content Area  -->
                <RowDefinition Height="Auto" />
                <!--  Buttons  -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <!--  Navigation  -->
                <ColumnDefinition Width="*" />
                <!--  Content  -->
            </Grid.ColumnDefinitions>

            <!--  Navigation List with Border  -->
            <Border
                Grid.Column="0"
                Margin="0,0,5,0"
                BorderBrush="Gray"
                BorderThickness="1">

                <ListBox
                    x:Name="NavigationList"
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding GroupedNavigationItems}"
                    SelectedItem="{Binding SelectedView}">

                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Padding="5,3"
                                        Background="DarkGray"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Text="{Binding Name}" />
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="ToolTip"
                                    Value="{Binding ErrorMessage}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder"
                                                Padding="5,3"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Transparent"
                                                BorderThickness="2">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!--  Selected State  -->
                                            <Trigger Property="IsSelected"
                                                     Value="True">
                                                <Setter TargetName="ItemBorder"
                                                        Property="Background"
                                                        Value="{DynamicResource Esri_BackgroundSelectedBrush}" />
                                            </Trigger>
                                            <!--  Mouse Over State  -->
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter TargetName="ItemBorder"
                                                        Property="Background"
                                                        Value="{DynamicResource Esri_BackgroundHoverBrush}" />
                                            </Trigger>
                                            <!--  Error State - Uses standard WPF validation error color  -->
                                            <DataTrigger Binding="{Binding HasErrors, Mode=OneWay}"
                                                         Value="True">
                                                <Setter TargetName="ItemBorder"
                                                        Property="BorderBrush"
                                                        Value="Red" />
                                                <Setter TargetName="ItemBorder"
                                                        Property="BorderThickness"
                                                        Value="1" />
                                            </DataTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Padding="0,3"
                                    Text="{Binding Name}" />

                                <!--  Error Icon  -->
                                <TextBlock Grid.Column="1"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Foreground="Red"
                                           Text="⚠">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasErrors, Mode=OneWay}"
                                                             Value="True">
                                                    <Setter Property="Visibility"
                                                            Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Border>

            <!--  Content Area with Border and ScrollViewer  -->
            <Border
                Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1">

                <ScrollViewer
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalScrollBarVisibility="Auto">
                    <ContentControl Padding="5" Content="{Binding SelectedView.Content}" />
                </ScrollViewer>
            </Border>

            <!--  Buttons (Fixed Position)  -->
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="ButtonSave"
                    Width="80"
                    Margin="5"
                    Command="{Binding SaveCommand}"
                    Content="_OK"
                    IsDefault="True"
                    Style="{DynamicResource Esri_Button}" />
                <Button
                    x:Name="ButtonCancel"
                    Width="80"
                    Margin="5"
                    Command="{Binding CancelCommand}"
                    Content="_Cancel"
                    IsCancel="True"
                    Style="{DynamicResource Esri_Button}" />
            </StackPanel>

        </Grid>
    </DockPanel>
</controls:ProWindow>