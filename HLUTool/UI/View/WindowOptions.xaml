<Window x:Class="HLU.UI.View.WindowOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:HLU.UI.ViewModel"
        Title="{Binding WindowTitle}"
        Width="Auto" MinWidth="500" MaxWidth="800"
        Height="Auto" MinHeight="300" MaxHeight="600"
        Icon="..\..\Icons\HLUIcon.png"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component/Themes/Default.xaml" />
                <ResourceDictionary Source="Dictionary/NullableValueConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary/ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel Margin="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Content Area (expands) -->
                <RowDefinition Height="Auto"/>
                <!-- Fixed Buttons -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <!-- Navigation -->
                <ColumnDefinition Width="*" />
                <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- Navigation List with Border -->
            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Margin="0,0,5,0">

                    <ListBox x:Name="NavigationList"
                         Grid.Row="0"
                         Grid.Column="0"
                         ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedView}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Padding="10,5" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Content Area with Border and ScrollViewer -->
            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="Gray">

                    <ScrollViewer Grid.Row="0"
                              Grid.Column="1"
                              VerticalScrollBarVisibility="Auto" >
                    <ContentControl Content="{Binding SelectedView.Content}"
                              Padding="5" />
                </ScrollViewer>
            </Border>

            <!-- Buttons (Fixed Position) -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="ButtonSave"
                        Command="{Binding SaveCommand}"
                        Content="_OK"
                        Width="80"
                        Margin="5"
                        Style="{DynamicResource Esri_Button}" />
                <Button x:Name="ButtonCancel"
                        Command="{Binding CancelCommand}"
                        Content="_Cancel"
                        Width="80"
                        Margin="5"
                        Style="{DynamicResource Esri_Button}" />
            </StackPanel>

        </Grid>
    </DockPanel>
</Window>
