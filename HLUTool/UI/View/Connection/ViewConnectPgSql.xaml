<controls:ProWindow
    x:Class="HLU.UI.View.Connection.ViewConnectPgSql"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    Title="{Binding WindowTitle}"
    Width="392"
    Height="512"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    Visibility="Collapsed"
    WindowStartupLocation="CenterOwner">
    <!--  Background="{DynamicResource WindowBackgroundBrush}"  -->
    <!--  Icon="..\..\..\Images\HLUIcon.png"  -->

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <StackPanel Name="StackPanelMain" Margin="4">
        <GroupBox
            Name="GroupBoxHost"
            Margin="0,4,0,0"
            Padding="0"
            Header="Host">
            <TextBox
                Name="TextBoxHost"
                Margin="2"
                Tag="ErrorContent"
                Text="{Binding Path=Host, Mode=TwoWay, ValidatesOnDataErrors=True}" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxPort"
            Margin="0,4,0,0"
            Padding="0"
            Header="Port">
            <TextBox
                Name="TextBoxPort"
                Margin="2"
                Tag="ErrorContent"
                Text="{Binding Path=Port, Mode=TwoWay, ValidatesOnDataErrors=True}" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxSsl"
            Margin="0,4,0,0"
            Padding="0"
            Header="SSL Mode">
            <ComboBox
                Name="ComboBoxSslMode"
                Margin="0,4,0,0"
                IsEditable="True"
                IsReadOnly="False"
                ItemsSource="{Binding Path=SslModes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding SslMode}" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxEncoding"
            Margin="0,4,0,0"
            Padding="0"
            Header="Encoding">
            <ComboBox
                Name="ComboBoxEncoding"
                Margin="0,4,0,0"
                IsEditable="True"
                IsReadOnly="False"
                ItemsSource="{Binding Path=Encodings, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding Encoding}" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxUsername"
            Margin="0,4,0,0"
            Padding="0"
            Header="User Name">
            <TextBox
                Name="TextBoxUserName"
                Margin="2"
                Tag="ErrorContent"
                Text="{Binding Path=UserName, Mode=TwoWay, ValidatesOnDataErrors=True}" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxPassword"
            Margin="0,4,0,0"
            Padding="0"
            Header="Password">
            <PasswordBox
                Name="TextBoxPassword"
                Margin="2"
                hlu:PasswordBoxAssistant.BindPassword="true"
                hlu:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                Tag="ErrorContent" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxDatabase"
            Margin="0,4,0,0"
            Padding="0"
            Header="Database">
            <ComboBox
                Name="ComboBoxDatabase"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                IsEditable="True"
                IsReadOnly="False"
                ItemsSource="{Binding Path=Databases, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding Database}"
                Tag="ErrorContent"
                Text="{Binding Path=Database, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </GroupBox>

        <GroupBox
            Name="GroupBpxSearchPath"
            Margin="0,4,0,0"
            Padding="0"
            Header="Search Path">
            <ComboBox
                Name="ComboBoxSearchPath"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                IsEditable="True"
                IsReadOnly="False"
                ItemsSource="{Binding Path=Schemata, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding SearchPath}"
                Tag="ErrorContent"
                Text="{Binding Path=SearchPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </GroupBox>

        <Grid
            Name="GridButtons"
            Height="23"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="1"
                Margin="0,0,2,0"
                Command="{Binding OkCommand}"
                ForceCursor="False"
                IsDefault="True">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Column="2"
                Margin="2,0,0,0"
                Command="{Binding CancelCommand}"
                IsCancel="True">
                _Cancel
            </Button>
        </Grid>
    </StackPanel>
</controls:ProWindow>
