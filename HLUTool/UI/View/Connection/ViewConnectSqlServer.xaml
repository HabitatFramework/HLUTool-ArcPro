<controls:ProWindow
    x:Class="HLU.UI.View.Connection.ViewConnectSqlServer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    Title="{Binding Path=WindowTitle}"
    Width="392"
    Height="325"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    Visibility="Collapsed"
    WindowStartupLocation="CenterOwner">
    <!--  Background="{DynamicResource WindowBackgroundBrush}"  -->
    <!--  Icon="..\..\..\Icons\HLUIcon.png"  -->

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary\ErrorMessageConverterDictionary.xaml" />
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <StackPanel Margin="4">
        <GroupBox
            Name="GroupBoxServer"
            Margin="0,4,0,0"
            Padding="0"
            Header="Server">
            <StackPanel>
                <ComboBox
                    Name="ComboBoxServer"
                    Margin="0,4,0,0"
                    IsEditable="True"
                    IsReadOnly="False"
                    ItemsSource="{Binding Path=Servers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValue="{Binding Path=Server}"
                    Tag="ErrorContent"
                    Text="{Binding Path=Server, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                <RadioButton
                    Name="RadioButtonWindowsAuthentication"
                    Margin="0,4,0,0"
                    GroupName="AuthenticationMode"
                    IsChecked="{Binding Path=WindowsAuthentication}">
                    Use _Windows authentication
                </RadioButton>
                <RadioButton
                    Name="RadioButtonSQLAuthentication"
                    Margin="0,4,0,0"
                    GroupName="AuthenticationMode"
                    IsChecked="{Binding Path=SQLServerAuthentication}">
                    Use _SQL Server authentication
                </RadioButton>
                <Grid
                    Name="GridSQLAuthentication"
                    Margin="16,4,0,0"
                    IsEnabled="{Binding Path=SQLServerAuthentication}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Margin="0,0,4,0" VerticalAlignment="Center">
                        User name
                    </Label>
                    <Label
                        Grid.Row="1"
                        Margin="0,0,4,0"
                        VerticalAlignment="Center">
                        Password
                    </Label>
                    <TextBox
                        Name="TextBoxUsername"
                        Grid.Column="1"
                        Margin="0,4,0,2"
                        Tag="ErrorContent"
                        Text="{Binding Path=Username, Mode=TwoWay, ValidatesOnDataErrors=True}" />
                    <PasswordBox
                        Name="TextBoxPassword"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,4,0,2"
                        hlu:PasswordBoxAssistant.BindPassword="true"
                        hlu:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        Tag="ErrorContent" />
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox
            Name="GroupBoxDatabase"
            Margin="0,4,0,0"
            Padding="0"
            Header="Database">
            <ComboBox
                Name="ComboBoxDatabase"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                ItemsSource="{Binding Path=Databases, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding Path=Database, ValidatesOnDataErrors=True}"
                Tag="ErrorContent" />
        </GroupBox>

        <GroupBox
            Name="GroupBoxSchema"
            Margin="0,4,0,0"
            Padding="0"
            Header="Default Schema">
            <ComboBox
                Name="ComboBoxSchema"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                ItemsSource="{Binding Path=Schemata, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding Path=DefaultSchema, ValidatesOnDataErrors=True}"
                Tag="ErrorContent" />
        </GroupBox>

        <Grid
            Name="GridButtons"
            Height="23"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="1"
                Margin="0,0,2,0"
                Command="{Binding Path=OkCommand}"
                ForceCursor="False"
                IsDefault="True">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Column="2"
                Margin="2,0,0,0"
                Command="{Binding Path=CancelCommand}"
                IsCancel="True">
                _Cancel
            </Button>
        </Grid>
    </StackPanel>
</controls:ProWindow>
