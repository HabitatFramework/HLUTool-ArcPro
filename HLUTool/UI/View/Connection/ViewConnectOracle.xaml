<controls:ProWindow
    x:Class="HLU.UI.View.Connection.ViewConnectOracle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    Title="{Binding WindowTitle}"
    Width="392"
    Height="287"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    Visibility="Collapsed"
    WindowStartupLocation="CenterOwner">
    <!--  Icon="..\..\..\Images\HLUIcon.png" Activated="Window_Activated">  -->
    <!--  Background="{DynamicResource WindowBackgroundBrush}"  -->

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <StackPanel Name="StackPanelMain" Margin="4">
        <GroupBox
            Name="GroupBoxDataSource"
            Margin="0,4,0,0"
            Padding="0"
            Header="Data Source">
            <ComboBox
                Name="ComboBoxDataSource"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                IsEditable="True"
                IsReadOnly="False"
                ItemsSource="{Binding Path=DataSources, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding DataSource}"
                Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
                Text="{Binding Path=DataSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}" />
        </GroupBox>

        <GroupBox
            Name="Authentication"
            Margin="0,4,0,0"
            Padding="0"
            Header="Authentication">
            <Grid Name="GridAuthentication" Margin="0,4,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label
                    Name="LabelUserID"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center"
                    Content="User ID" />
                <TextBox
                    Name="TextBoxUserID"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
                    Text="{Binding Path=UserID, Mode=TwoWay, ValidatesOnDataErrors=True}"
                    ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}" />
                <Label
                    Name="LabelDBAPrivilege"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center"
                    Content="Connect As" />
                <ComboBox
                    Name="ComboBoxDBAPrivilege"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    IsEditable="False"
                    IsReadOnly="False"
                    ItemsSource="{Binding Path=DBAPrivilegeOptions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding DBAPrivilegeOption}" />
                <Label
                    Name="LabelPassword"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,4,4,0"
                    VerticalAlignment="Center"
                    Content="Password" />
                <PasswordBox
                    Name="TextBoxPassword"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    hlu:PasswordBoxAssistant.BindPassword="true"
                    hlu:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
                    ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}" />
            </Grid>
        </GroupBox>

        <GroupBox
            Name="GroupBpxDefaultSchema"
            Margin="0,4,0,0"
            Padding="0"
            Header="Default Schema">
            <ComboBox
                Name="ComboBoxDefaultSchema"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                IsEditable="True"
                IsReadOnly="False"
                ItemsSource="{Binding Path=Schemata, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding DefaultSchema}"
                Text="{Binding Path=DefaultSchema, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </GroupBox>

        <Grid
            Name="GridButtons"
            Height="23"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="1"
                Margin="0,0,2,0"
                Command="{Binding OkCommand}"
                ForceCursor="False"
                IsDefault="True">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Column="2"
                Margin="2,0,0,0"
                Command="{Binding CancelCommand}"
                IsCancel="True">
                _Cancel
            </Button>
        </Grid>
    </StackPanel>
</controls:ProWindow>
