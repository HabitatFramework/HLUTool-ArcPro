<Window x:Class="HLU.UI.View.Connection.ViewConnectOracle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    Title="{Binding Path=WindowTitle}"
    Width="392"
    Height="287"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Visibility="Collapsed"
    WindowStartupLocation="CenterOwner">
    <!-- Icon="..\..\..\Icons\HLUIcon.png" Activated="Window_Activated"> -->
    <!-- Background="{DynamicResource WindowBackgroundBrush}" -->

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel
        Name="StackPanelMain"
        Margin="4">
        <GroupBox Header="Data Source"
            Name="GroupBoxDataSource"
            Margin="0,4,0,0"
            Padding="0">
            <ComboBox ItemsSource="{Binding Path=DataSources, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Text="{Binding Path=DataSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                Name="ComboBoxDataSource"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                IsEditable="True"
                IsReadOnly="False"
                SelectedItem="{Binding Path=DataSource}"
                Tag="ErrorContent" />
        </GroupBox>

        <GroupBox Header="Authentication"
            Name="Authentication"
            Margin="0,4,0,0"
            Padding="0">
            <Grid
                Name="GridAuthentication"
                Margin="0,4,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="User ID"
                    Name="LabelUserID"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center" />
                <TextBox Text="{Binding Path=UserID, Mode=TwoWay, ValidatesOnDataErrors=True}"
                    Name="TextBoxUserID"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    Tag="ErrorContent" />
                <Label Content="Connect As"
                    Name="LabelDBAPrivilege"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding Path=DBAPrivilegeOptions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Name="ComboBoxDBAPrivilege"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    IsEditable="False"
                    IsReadOnly="False"
                    SelectedItem="{Binding Path=DBAPrivilegeOption}" />
                <Label Content="Password"
                    Name="LabelPassword"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,4,4,0"
                    VerticalAlignment="Center" />
                <PasswordBox
                    Name="TextBoxPassword"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    hlu:PasswordBoxAssistant.BindPassword="true"
                    hlu:PasswordBoxAssistant.BoundPassword="{Binding Path=Password,
                                                                     Mode=TwoWay,
                                                                     UpdateSourceTrigger=PropertyChanged,
                                                                     ValidatesOnDataErrors=True}"
                    Tag="ErrorContent" />
            </Grid>
        </GroupBox>

        <GroupBox Header="Default Schema"
            Name="GroupBpxDefaultSchema"
            Margin="0,4,0,0"
            Padding="0">
            <ComboBox ItemsSource="{Binding Path=Schemata, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Text="{Binding Path=DefaultSchema, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                Name="ComboBoxDefaultSchema"
                Margin="0,4,0,0"
                DropDownOpened="ComboBox_DropDownOpened"
                IsEditable="True"
                IsReadOnly="False"
                SelectedItem="{Binding Path=DefaultSchema}" />
        </GroupBox>

        <Grid
            Name="GridButtons"
            Height="23"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="1"
                Margin="0,0,2,0"
                Command="{Binding Path=OkCommand}"
                ForceCursor="False"
                IsDefault="True">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Column="2"
                Margin="2,0,0,0"
                Command="{Binding Path=CancelCommand}"
                IsCancel="True">
                _Cancel
            </Button>
        </Grid>
    </StackPanel>
</Window>
