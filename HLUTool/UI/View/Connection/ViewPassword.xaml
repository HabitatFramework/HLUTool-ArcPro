<controls:ProWindow
    x:Class="HLU.UI.View.Connection.ViewPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    Title="{Binding WindowTitle}"
    Width="392"
    Height="146"
    Background="{DynamicResource WindowBackgroundBrush}"
    Icon="..\..\..\Images\HLUTool16.png"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Style="{DynamicResource ProWindowStyle}"
    Visibility="Collapsed"
    WindowStartupLocation="CenterOwner">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <StackPanel Margin="4">
        <GroupBox
            Name="Password"
            Margin="0,4,0,0"
            Padding="0"
            Header="Authentication">
            <Grid Name="GridUser">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Name="LabelUser"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="{Binding Path=UserLabel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Name="TextBoxUser"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    IsEnabled="False"
                    Text="{Binding Path=UserText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False}" />
                <Label
                    Name="LabelPassword"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,4,0,2"
                    VerticalAlignment="Center">
                    Password
                </Label>
                <PasswordBox
                    Name="TextBoxPassword"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,4,0,2"
                    hlu:PasswordBoxAssistant.BindPassword="true"
                    hlu:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
                    ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}" />
            </Grid>
        </GroupBox>

        <Grid
            Name="GridButtons"
            Height="23"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="1"
                Margin="0,0,2,0"
                Command="{Binding OkCommand}"
                ForceCursor="False"
                IsDefault="True">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Column="2"
                Margin="2,0,0,0"
                Command="{Binding CancelCommand}"
                IsCancel="True">
                _Cancel
            </Button>
        </Grid>
    </StackPanel>
</controls:ProWindow>
