<controls:ProWindow
    x:Class="HLU.UI.View.Connection.ViewSelectConnection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:hlu="clr-namespace:HLU.UI.UserControls;assembly="
    Title="{Binding WindowTitle}"
    Height="136"
    MinWidth="300"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    Visibility="Collapsed"
    WindowStartupLocation="CenterOwner">
    <!--  Background="{DynamicResource WindowBackgroundBrush}"  -->
    <!--  Icon="..\..\..\Images\HLUIcon.png"  -->
    <!--  Activated="Window_Activated"  -->

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <StackPanel Name="StackPanelMain" Margin="4">
        <GroupBox
            Name="GroupBoxConnectionType"
            Margin="0,4,0,0"
            Padding="0"
            Header="Connection Type"
            TabIndex="3">
            <ComboBox
                Name="ComboBoxConnectionType"
                Margin="0,4,0,0"
                IsEditable="True"
                IsReadOnly="True"
                ItemsSource="{Binding Path=ConnectionTypes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding ConnectionType}"
                TabIndex="0"
                Tag="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent, Converter={StaticResource errorMessageConverter}}"
                Text="{Binding Path=DefaultSchema, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors).CurrentItem.ErrorContent}" />
        </GroupBox>

        <Grid
            Name="GridButtons"
            Height="23"
            Margin="0,4,0,0"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOk"
                Grid.Column="1"
                Margin="0,0,2,0"
                Command="{Binding OkCommand}"
                ForceCursor="False"
                IsDefault="True"
                TabIndex="1">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Column="2"
                Margin="2,0,0,0"
                Command="{Binding CancelCommand}"
                IsCancel="True"
                TabIndex="2">
                _Cancel
            </Button>
        </Grid>
    </StackPanel>
</controls:ProWindow>
