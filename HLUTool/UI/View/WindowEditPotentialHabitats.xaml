<controls:ProWindow
    x:Class="HLU.UI.View.WindowEditPotentialHabitats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HLU.UI.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    Title="{Binding WindowTitle}"
    MinWidth="800"
    MinHeight="250"
    d:DataContext="{d:DesignInstance Type=local:ViewModelWindowEditPotentialHabitats}"
    Icon="..\..\Images\HLUTool16.png"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource ProWindowStyle}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <!--
                Dropdown item container styling.
                Uses the Pro list-item keys by string (so it compiles even if some aren't in AssetResourceKeys),
                with a safe fallback to SystemColors highlight.
            -->

            <Style x:Key="EsriComboBoxItemStyle" TargetType="ComboBoxItem">
                <Setter Property="Background" Value="{DynamicResource Esri_ControlBackgroundBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextControlBrush}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />

                <Style.Triggers>
                    <Trigger Property="IsHighlighted" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}" />
                        <Setter Property="Foreground" Value="{DynamicResource Esri_TextControlBrush}" />
                    </Trigger>

                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}" />
                        <Setter Property="Foreground" Value="{DynamicResource Esri_TextControlBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary\ValidationTemplates.xaml" />
                <ResourceDictionary Source="Dictionary\CodeDescriptionConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary\CodeNameDescriptionConverterDictionary.xaml" />
                <ResourceDictionary Source="Dictionary\ErrorMessageConverterDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>

    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox
            Name="GroupBoxPotentialPriorityHabitats"
            Grid.Row="0"
            Grid.Column="0"
            Header="Potential Priority Habitats">
            <DataGrid
                x:Name="DataGridPotentialPriorityHabitats"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="4,2,8,2"
                Padding="2,0"
                AutoGenerateColumns="False"
                BorderBrush="Black"
                BorderThickness="1"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                CanUserReorderColumns="False"
                CanUserResizeColumns="True"
                CanUserSortColumns="True"
                CellStyle="{StaticResource DataGridCellErrorStyle}"
                HeadersVisibility="All"
                IsEnabled="{Binding BapHabitatsUserEnabled}"
                IsReadOnly="False"
                ItemsSource="{Binding IncidBapHabitatsUser}"
                RowDetailsVisibilityMode="Visible"
                RowHeaderWidth="20"
                RowHeight="24"
                RowStyle="{StaticResource DataGridRowWithValidation}"
                Style="{DynamicResource Esri_DataGrid}">
                <DataGrid.RowValidationRules>
                    <DataErrorValidationRule />
                </DataGrid.RowValidationRules>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding bap_id}"
                        Header="bap_id"
                        IsReadOnly="True"
                        Visibility="Collapsed" />

                    <DataGridTextColumn
                        Binding="{Binding incid}"
                        Header="INCID"
                        IsReadOnly="True"
                        Visibility="Collapsed" />

                    <DataGridComboBoxColumn
                        Width="SizeToCells"
                        MinWidth="250"
                        CanUserResize="True"
                        DisplayMemberPath="description"
                        Header="Habitat"
                        IsReadOnly="False"
                        SelectedValueBinding="{Binding bap_habitat, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        SelectedValuePath="code">
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.BapHabitatCodes, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                <Setter Property="ItemContainerStyle" Value="{StaticResource EsriComboBoxItemStyle}" />
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.BapHabitatCodes, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                <Setter Property="ItemContainerStyle" Value="{StaticResource EsriComboBoxItemStyle}" />
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                    </DataGridComboBoxColumn>

                    <DataGridComboBoxColumn
                        Width="SizeToCells"
                        MinWidth="200"
                        CanUserResize="True"
                        DisplayMemberPath="description"
                        Header="Determ. Quality"
                        SelectedValueBinding="{Binding quality_determination, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        SelectedValuePath="code">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.BapDeterminationQualityCodesUser, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                <Setter Property="ItemContainerStyle" Value="{StaticResource EsriComboBoxItemStyle}" />
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.BapDeterminationQualityCodesUser, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                <Setter Property="ItemContainerStyle" Value="{StaticResource EsriComboBoxItemStyle}" />
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                    <DataGridComboBoxColumn
                        Width="SizeToCells"
                        MinWidth="100"
                        CanUserResize="True"
                        DisplayMemberPath="description"
                        Header="Interp. Quality"
                        SelectedValueBinding="{Binding quality_interpretation, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        SelectedValuePath="code">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.BapInterpretationQualityCodes, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                <Setter Property="ItemContainerStyle" Value="{StaticResource EsriComboBoxItemStyle}" />
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.BapInterpretationQualityCodes, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                <Setter Property="ItemContainerStyle" Value="{StaticResource EsriComboBoxItemStyle}" />
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                    <DataGridTextColumn
                        Width="SizeToCells"
                        MinWidth="200"
                        Binding="{Binding interpretation_comments, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        CanUserResize="True"
                        Header="Interp. Comments"
                        IsReadOnly="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="{DynamicResource Esri_ControlBackgroundBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource Esri_TextControlBrush}" />
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Grid
            Name="GridButtons"
            Grid.Row="2"
            Grid.Column="0"
            Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="82" />
                <ColumnDefinition Width="82" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ButtonOK"
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,0,2,0"
                Command="{Binding OkCommand}"
                IsDefault="True"
                Style="{DynamicResource Esri_Button}">
                _OK
            </Button>
            <Button
                Name="ButtonCancel"
                Grid.Row="0"
                Grid.Column="3"
                Margin="2,0,0,0"
                Command="{Binding CancelCommand}"
                IsCancel="True"
                Style="{DynamicResource Esri_Button}">
                _Cancel
            </Button>
        </Grid>
    </Grid>
</controls:ProWindow>